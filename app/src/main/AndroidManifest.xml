<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/wechat_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeChatProject"
        tools:targetApi="31"

        android:requestLegacyExternalStorage="true">
        <activity android:name="LoginActivity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- 此处将LoginActivity设置为首先进入的界面 -->
            </intent-filter>
        </activity>
        <activity android:name="LoginActivity.RegisterActivity"
            android:exported="true">
        </activity>
        <activity android:name="LoginActivity.WeChatLoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>